{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev:all",
  "installCommand": "npm install && npm run api:install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "/api"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
} 